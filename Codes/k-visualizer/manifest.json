{
	"manifest_version": 2,
	"name": "k-visualizer",
	"description": "This extension highlights and visualizes keywords in content.",
	"version": "0.3",
	"permissions": [
		"contextMenus",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},

	// "page_action": {
	// 	"default_icon": "icon16.png",
 //        "default_title": "cliptext",      // optional; shown in tooltip
	// 	"default_popup": "popup.html"
	// },

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
	,

	"background": {
		"scripts": ["event.js"]
	}
}